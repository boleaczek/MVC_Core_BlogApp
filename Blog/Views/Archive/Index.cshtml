@model ICollection<Blog.Models.Tag>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Archive";
}
<div>
    <div>
        <h2 class="section_title">Featured tags:</h2>
        <nav class="archive_navigation">
            @foreach (var tag in Model)
            {
                <button class="tag_nav main_nav">@tag.Name</button>
            }
        </nav>
    </div>
    @foreach (var tag in Model)
    {
        <div class="tag_container">
            <p class="tag_name">@tag.Name</p>
            <ul class="tag_posts_list">
                @foreach (var post in tag.PostTags)
                {
                    <li><a class="post_tag_name" asp-controller="Home" asp-action="Read" asp-route-id="@post.PostId">@post.Post.Title</a></li>
                }
            </ul>
        </div>
    }
</div>