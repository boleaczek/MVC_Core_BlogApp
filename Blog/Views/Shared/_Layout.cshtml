<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["Description"]" />
    <meta name="author" content="@ViewData["Author"]" />
    <link type="text/css" rel="stylesheet" href="~/css/main.css" />
    <link type="image/png" rel="icon" href="~/icon.ico" />
    <title>@ViewData["Title"] - @ViewData["BlogName"]</title>
</head>
<body>
    <div>
        <div>
            <a asp-controller="Home" asp-action="Index" ><img src="~/logo.png" alt="logo"/></a>
            <h1><a asp-controller="Home" asp-action="Index">@ViewData["BlogName"]</a></h1>
        </div>
        <div>
            <p>@ViewData["Description"]</p>
        </div>
        <ul>
            <li><a asp-controller="Archive" asp-action="Index">Archive</a></li>
            <li><a asp-controller="About" asp-action="Index">About</a></li>
        </ul>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
