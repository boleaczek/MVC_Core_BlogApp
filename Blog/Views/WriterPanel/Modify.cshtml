@model Blog.Models.ViewModels.PostTagNameViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
</head>
<body>
    <form asp-action="Modify" asp-controller="AdminPanel">
        <input asp-for="Post.Id" value="@Model.Post.Id" type="hidden" />
        <input asp-for="Post.Title" value="@Model.Post.Title" />
        <textarea asp-for="Post.Content" id="input"></textarea>
        <input asp-for="TagNames" value="@Model.TagNames"/>
        <input type="submit" value="Save" />
    </form>
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script>
    var simplemde = new SimpleMDE({ element: document.getElementById("input") });
    simplemde.value(@Model.Post.Content);
    </script>
</body>
</html>
