@model Blog.Models.PostCommentViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Read</title>
</head>
<body>
    <p>@Model.Post.Title</p>
    <p>@Model.Post.Content</p>
    <p>@Model.Post.PublicationDate</p>
    @foreach(Blog.Models.Comment c in Model.Post.Comments)
    {
        <p>@c.Author</p>
        <p>@c.Content</p>
    }
    <p>Share your thoughts!</p>
    <form asp-action="WriteComment" asp-controller="Home">
        <input asp-for="@Model.Post.Id" value="@Model.Post.Id" type="hidden" />
        <input asp-for="@Model.Comment.Author" />
        <input asp-for="@Model.Comment.Content" />
        <button type="submit">Save</button>
    </form>
</body>
</html>
